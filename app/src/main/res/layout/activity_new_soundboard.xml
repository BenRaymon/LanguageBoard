<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/newSB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Create New Board"
            android:textColor="@color/WHITE"
            android:backgroundTint="@color/colorPrimary"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/editSB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/GREY"
            android:textColor="@color/DARK_GREY"
            android:text="Edit Current Board"
            android:textSize="14sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/above_text"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Create a New Language Board"
        android:gravity="center"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Language Board Name: "
            android:padding="10dp"/>

        <EditText
            android:id="@+id/soundboard_category_ET"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Enter Board Name"
            android:layout_marginRight="10dp" />

        <Spinner
            android:id="@+id/soundboard_category_dropdown"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginRight="10dp"
            android:visibility="gone"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Image for Language Board Cover"
            android:layout_centerVertical="true"/>

        <Button
            android:id="@+id/choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Image"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/below_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Select an image to upload and save your language board"
        android:layout_marginTop="7dp"/>
    <Button
        android:id="@+id/send"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Create New Language Board"
        android:layout_gravity="center"
        android:layout_margin="10dp"/>

</LinearLayout>